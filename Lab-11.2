#define _CRT_SECURE_NO_DEPRECATE
#include <stdio.h>
#include <locale.h>
#include <math.h>

float function(float a);

int main() {
	setlocale(LC_ALL, "rus");
	float M[100];
	int i;
	float x = 2;
	float accumPositive = 0, accumNegative = 0, numberPos = 0, numberNeg = 0;
	for (i = 0; x < 4 && i < 100; x += 0.01, i++) {
		M[i] = function(x);
		if (M[i] > 0) {
			accumPositive += M[i];
			numberPos++;
		}
		else {
			accumNegative += M[i];
			numberNeg++;
		}
		printf("%f", M[i]);
	}
	if (accumPositive == 0) {
		printf("Имя массива = 'M' | Накопленное значение положительных элементов массива = %f | Накопленное значение отрицательных элементов массива = %f | Число положительных значений = %f | Число отрицательных значений = %.f | Среднее значение всех элементов массива = %f ", accumPositive, accumNegative, numberPos, numberNeg, (accumPositive + accumNegative) / (numberPos + numberNeg));
	}
	else {
		printf("Имя массива = 'M' | Накопленное значение положительных элементов массива = %f | Накопленное значение отрицательных элементов массива = %f | Число положительных значений = %f | Число отрицательных значений = %f | Среднее значение всех положительных элементов массива = %f ", accumPositive, accumNegative, numberPos, numberNeg, accumPositive / numberPos);
	}
	
}

float function(float a) {
	float b;
	b = pow(2, a) - pow(2 * a, 2) - 1;
	return b;
}
